<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="practicaltest01var08.eim.systems.cs.pub.ro.practicaltest01var08.PracticalTest01Var08MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/riddle_edit_text"
        android:layout_marginTop="20dp"
        android:enabled="true"
        android:inputType="text"
        android:saveEnabled="false"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer_edit_text"
        android:layout_below="@id/riddle_edit_text"
        android:layout_marginTop="40dp"
        android:enabled="true"
        android:inputType="text"
        android:saveEnabled="false"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_button"
        android:layout_below="@id/answer_edit_text"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="@string/play_button_text"/>
</RelativeLayout>
